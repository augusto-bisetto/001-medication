<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/surgeries.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/b886c2081b.js" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    <h1>surgeries</h1>

    <div class="row">
        <% surgeries.forEach(surgery => { %>                 
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <%= surgery.name %> 
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <h6><b>Description</b></h6>
                                <p class="card-text"><%= surgery.description %></p>    
                            </div>
                            <div class="col-6">
                                <h6><b>Time</b></h6>
                                <p><%= surgery.time %> </p>

                            </div>
                            <div class="col-6">
                                <h6><b>Day</b></h6>
                                <p><%= surgery.day %> </p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>    
        <% }) %>
        <% if (surgeries.length == 0) { %>
          <h2>No surgeries added yet</h2>
      <% } %>
  </div>
  <h2>Create new</h2>
  <div class="card">
      <div class="card-body">
          <form action="" method="post" class="row mt-3">
              <div class="col-12 col-md-6">
                  <div class="form-grup">
                      <label for="name">Name</label>
                      <input type="text" name="name" id="name" class="form-control">
                  </div>
              </div>

              <div class="col-12">
                  <div class="form-group">
                      <label for=""> Description</label>
                      <textarea name="description" id="" cols="30" rows="10" class="form-control"></textarea>
                  </div>
              </div>    
              <div class="col-12 col-md-6">
                  <div class="form-group">
                      <label for="">Time</label>
                      <textarea name="time" id="" cols="30" rows="10" class="form-control"></textarea>
                  </div>
              </div>    
              <div class="col-12 col-md-6">
                  <div class="form-group">
                      <label for="">Day</label>
                      <textarea name="day" id="" cols="30" rows="10" class="form-control"></textarea>
                  </div>
              </div>    
              <div class="col-12">
                  <button type="submit" class="btn btn-primary w-100 btn-lg">Create</button>
              </div>
          </form>

      </div>
  </div>
   
        

</body>
</html>