<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/b886c2081b.js" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    <div class="container px-4 overflow-hidden">
    <h1>immunizations</h1>

    <div class="row g-2 align-items-start">
        <% immunizations.forEach(immunization => { %>                 
            <div class="col-6">
                <div class="card">
                    <div class="card-header">
                        <%= immunization.name %> 
                    </div>
                    <div class="card-body">
                        <div class="row">
                            
                                <h6><b>Description</b></h6>
                                <p class="card-text"><%= immunization.description %></p>    
                            
                            
                                <h6><b>When you have done it</b></h6>
                                <p><%= immunization.dayDone %> </p>

                            
                            
                                <h6><b>When it expire</b></h6>
                                <p><%= immunization.dayExpire %> </p>

                            
                        </div>
                    </div>
                </div>
            </div>    
        <% }) %>
        <% if (immunizations.length == 0) { %>
            <h2>No vaccines added yet</h2>
        <% } %>
    </div>
        <h2>Create new</h2>
        <div class="card">
            <div class="card-body">
                <form action="" method="post" class="row mt-3">
                    <div class="col-12 col-md-6">
                        <div class="form-grup">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" class="form-control">
                        </div>
                    </div>
      
                    <div class="col-12">
                        <div class="form-group">
                            <label for=""> Description</label>
                            <textarea name="description" id="" cols="30" rows="10" class="form-control"></textarea>
                        </div>
                    </div>    
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label for="">date you've done it</label>
                            <textarea name="dayDone" id="" cols="30" rows="10" class="form-control"></textarea>
                        </div>
                    </div>    
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label for="">date it expire</label>
                            <textarea name="dayExpire" id="" cols="30" rows="10" class="form-control"></textarea>
                        </div>
                    </div>    
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary w-100 btn-lg">Create</button>
                    </div>
                </form>
      
            </div>
        </div>
    </div>
    
</body>
</html>